name:                ohm-chat-client
version:             0.1.0.0
author:              Kris Jenkins
maintainer:          krisajenkins@gmail.com
copyright:           Kris Jenkins 2014
license-file:        LICENSE.txt
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

executable chat-client
  main-is:             Main.hs
  -- other-modules:
  other-extensions:    ForeignFunctionInterface, GeneralizedNewtypeDeriving, OverloadedStrings
  build-depends:       base >=4.7 && <4.8
                     , containers >=0.5 && <0.6
                     , lens
                     , profunctors
                     , stm >=2.4 && <2.5
                     , pipes >= 4.0
                     , pipes-concurrency >= 2.0
                     , aeson > 0.8
                     , time > 1.4
                     , text >= 1.1.1.3
                     , transformers >= 0.4.1.0
                     , mvc >= 1.0.1
                     , ghcjs-base >= 0.1
                     , ghcjs-base >= 0.1
                     , ghcjs-dom >=0.1.1.1
                     , ghcjs-prim >= 0.1.0.0
                     , oHm
                     , ohm-chat-server
  hs-source-dirs:      src
  default-language:    Haskell2010
